@model IEnumerable<QuestionPaperApp.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_Notification")
<h2 class="text-center">Admin</h2>
<section>
    <div class="container">
        <p class="text-center">
            <a href="@Url.Action("Create")" class="btn btn-info" style="border-radius: 5px; margin-bottom: 10px;">Create New User</a>
            <a href="@Url.Action("QuestionPapers")" class="btn btn-primary" style="border-radius: 5px; margin-bottom: 10px;">View Question Papers</a>
        </p>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Username)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Role)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Username)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Role)</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.UserID })" class="btn btn-info " style="border-radius: 5px; margin-right: 5px;">Edit</a>
                            <a href="@Url.Action("Delete", new { id = item.UserID })" class="btn btn-danger" style="border-radius: 5px;">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
